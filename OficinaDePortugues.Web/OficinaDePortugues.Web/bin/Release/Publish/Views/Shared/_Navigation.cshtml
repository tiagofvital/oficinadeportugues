@helper  DisplayParentCssClassFor(string parentName)
{
    var currentParentCssClass = "current-menu-ancestor current-menu-parent";

    var currentParentName = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();

    if (currentParentName == parentName)
    {
        @Html.Raw(currentParentCssClass);
    }
}

@helper  DisplayChildCssClassFor(string parentName, string childName)
{
    var currentCssClass = "current-menu-item current_page_item";

    var routeValues = HttpContext.Current.Request.RequestContext.RouteData.Values;

    if (routeValues["controller"].ToString() == parentName && routeValues["action"].ToString() == childName)
    {
        @Html.Raw(currentCssClass)
    }
}

